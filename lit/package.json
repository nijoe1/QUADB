    "@lit-protocol/encryption": "^7.0.4",
    "@lit-protocol/lit-node-client": "^7.0.4",
    "@types/express": "^4.17.17",
    "@types/glob": "^8.1.0",
    "@types/node": "^20.5.1",
    "buffer": "^6.0.3",
    "esbuild": "^0.24.0",
    "ethers": "^5.7.2",
    "express": "^4.18.2",
    "form-data": "^4.0.2",
    "glob": "^10.3.10",
    "ipfs-only-hash": "^4.0.0",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "w3name": "^1.0.9"
  },
  "devDependencies": {
    "@types/chai": "^5.2.1",
    "@types/chai-json-schema": "^1.4.10",
